---
import Layout from '../components/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
---
<Layout title="Contacto" description="Formulario de contacto para dudas sobre la Ruta del Faedo de Ciñera">
  <Breadcrumbs items={[{ href: '/', label: 'Inicio' }, { href: '/contacto', label: 'Contacto' }]} />
  <section class="container py-8 grid md:grid-cols-2 gap-8">
    <div>
      <h1 class="text-2xl mb-2">Contacto</h1>
      <p class="text-gray-700">Puedes escribirnos usando el formulario o por correo a <a href="mailto:info@faedodecinera.example">info@faedodecinera.example</a>.</p>
      <p class="text-gray-700 mt-2">Este formulario es compatible con servicios estáticos como Netlify Forms.</p>
    </div>
    <form name="contacto" method="POST" data-netlify="true" class="border rounded-lg p-4 grid gap-4">
      <input type="hidden" name="form-name" value="contacto" />
      <label class="grid gap-1">
        <span>Nombre</span>
        <input class="border rounded p-2" type="text" name="nombre" required />
      </label>
      <label class="grid gap-1">
        <span>Email</span>
        <input class="border rounded p-2" type="email" name="email" required />
      </label>
      <label class="grid gap-1">
        <span>Mensaje</span>
        <textarea class="border rounded p-2" name="mensaje" rows="5" required></textarea>
      </label>
      <button class="bg-primary-600 text-white px-4 py-2 rounded" type="submit">Enviar</button>
    </form>
  </section>
</Layout>

