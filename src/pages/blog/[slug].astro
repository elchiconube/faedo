---
import Layout from '../../components/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Seo from '../../components/Seo.astro';
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import { SITE_LOGO, SITE_URL } from '../../consts';

interface Props { params: { slug: string } }
const { slug } = Astro.params as Props['params'];
const post = (await getCollection('blog')).find((p) => p.slug === slug);
if (!post) throw new Error('Post no encontrado');
const data = post.data;
const { Content } = await post.render();
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
const blogLd = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: data.title,
  description: data.excerpt,
  datePublished: data.date.toISOString(),
  dateModified: data.date.toISOString(),
  mainEntityOfPage: canonical,
  image: data.coverImage?.src ? new URL(data.coverImage.src, Astro.site).toString() : undefined,
  author: {
    '@type': 'Organization',
    name: 'Faedo de Ciñera',
    url: SITE_URL
  },
  publisher: {
    '@type': 'Organization',
    name: 'Faedo de Ciñera',
    url: SITE_URL,
    logo: {
      '@type': 'ImageObject',
      url: new URL(SITE_LOGO, Astro.site).toString()
    }
  }
};
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((p) => ({ params: { slug: p.slug } }));
}
---
<Layout title={data.title} description={data.excerpt}>
  <Seo slot="head" title={data.title} description={data.excerpt} type="article" jsonLd={blogLd} />
  <Breadcrumbs items={[{ href: '/', label: 'Inicio' }, { href: '/blog', label: 'Blog' }, { href: `/blog/${slug}`, label: data.title }]} />
  <article class="container prose prose-slate max-w-none py-8">
    <h1>{data.title}</h1>
    {data.coverImage && (
      <div class="my-4">
        <Image src={data.coverImage} alt={data.title} widths={[640,960,1280]} sizes="(max-width: 1024px) 100vw, 960px" />
      </div>
    )}
    <p class="text-sm text-gray-500">{data.date.toLocaleDateString('es-ES')}</p>
    <div class="mt-6">
      <Content />
    </div>
  </article>
</Layout>
