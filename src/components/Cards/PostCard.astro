---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  excerpt: string;
  href: string;
  cover?: ImageMetadata;
  date?: string;
  tags?: string[];
}
const { title, excerpt, href, cover, date, tags = [] } = Astro.props as Props;
---
<article class="rounded-lg border border-gray-200 overflow-hidden bg-white shadow-sm hover:shadow transition-shadow">
  {cover && (
    <div class="aspect-[16/9] overflow-hidden">
      <Image src={cover} alt={title} widths={[320,480,768,1024]} sizes="(max-width: 768px) 100vw, 480px" />
    </div>
  )}
  <div class="p-4">
    <h3 class="text-lg font-semibold"><a href={href} class="no-underline hover:underline">{title}</a></h3>
    {date && <p class="text-xs text-gray-500 mt-1">{new Date(date).toLocaleDateString('es-ES')}</p>}
    <p class="mt-2 text-sm text-gray-600">{excerpt}</p>
    {tags.length > 0 && (
      <p class="mt-3 flex flex-wrap gap-2">
        {tags.map((t) => (
          <span class="text-xs bg-gray-100 px-2 py-1 rounded">#{t}</span>
        ))}
      </p>
    )}
  </div>
</article>

