---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  href?: string;
  image?: ImageMetadata;
}
const { title, description, href = '#', image } = Astro.props as Props;
---
<article class="rounded-lg border border-gray-200 overflow-hidden bg-white shadow-sm hover:shadow transition-shadow">
  {image && (
    <div class="aspect-[4/3] overflow-hidden">
      <Image src={image} alt={title} widths={[320,480,640]} sizes="(max-width: 640px) 100vw, 320px" />
    </div>
  )}
  <div class="p-4">
    <h3 class="text-lg font-semibold"><a href={href} class="no-underline hover:underline">{title}</a></h3>
    <p class="mt-2 text-sm text-gray-600">{description}</p>
  </div>
</article>

