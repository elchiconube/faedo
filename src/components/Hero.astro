---
import { Image } from 'astro:assets';
import heroImg from '../assets/blog-placeholder-5.jpg';
interface Props {
  title: string;
  subtitle?: string;
  ctaHref?: string;
  ctaLabel?: string;
}
const { title, subtitle, ctaHref = '/ruta/faedo-de-cinera', ctaLabel = 'Ver la ruta' } = Astro.props as Props;
---
<section class="bg-gradient-to-b from-primary-50 to-white border-b border-gray-100">
  <div class="container grid md:grid-cols-2 gap-8 items-center py-10 md:py-16">
    <div>
      <h1 class="text-3xl md:text-4xl leading-tight">{title}</h1>
      {subtitle && <p class="mt-3 text-lg text-gray-700">{subtitle}</p>}
      <div class="mt-6">
        <a href={ctaHref} class="inline-block bg-primary-600 text-white px-5 py-3 rounded-md shadow hover:bg-primary-700">{ctaLabel}</a>
      </div>
    </div>
    <div class="relative aspect-[16/9] md:aspect-[4/3] rounded-lg overflow-hidden shadow ring-1 ring-black/5">
      <Image src={heroImg} alt="Hayedo del Faedo de CiÃ±era" widths={[480,768,1024,1280]} sizes="(max-width: 768px) 100vw, 50vw" />
    </div>
  </div>
  
</section>

