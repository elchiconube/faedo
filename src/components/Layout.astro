---
import { SITE_TITLE, SITE_DESCRIPTION, SITE_NAME, SITE_LOCALE, SITE_URL, SITE_IMAGE } from '../consts';
import GoogleAnalytics from './GoogleAnalytics.astro';
import GoogleSiteVerification from './GoogleSiteVerification.astro';
import { ViewTransitions } from 'astro:transitions';

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  url = undefined,
  image = undefined,
  type = 'website',
} = Astro.props;

const canonicalURL = (url ?? new URL(Astro.url.pathname, Astro.site)).toString();
const ogImage = image ? new URL(image, Astro.site).toString() : new URL(SITE_IMAGE, Astro.site).toString();
---
<!doctype html>
<html lang={SITE_LOCALE}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#349981" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang={SITE_LOCALE} href={canonicalURL} />
    <meta name="description" content={description} />
    <meta name="keywords" content="Faedo de Ciñera, senderismo León, rutas León, hayedo, Pola de Gordón, naturaleza León, rutas familias" />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={SITE_LOCALE} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />
    <link rel="preload" as="style" href="/fonts.css" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="/fonts.css" /></noscript>
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: SITE_NAME,
      description: SITE_DESCRIPTION,
      url: Astro.site?.toString(),
      inLanguage: SITE_LOCALE,
      potentialAction: {
        '@type': 'SearchAction',
        target: {
          '@type': 'EntryPoint',
          urlTemplate: `${Astro.site}?q={search_term_string}`
        },
        'query-input': 'required name=search_term_string'
      }
    })} />
    <slot name="head" />
    <GoogleSiteVerification />
    <GoogleAnalytics />
    <ViewTransitions />
    <style is:global>
      @import "../styles/globals.css";
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <a class="skip-link" href="#contenido">Saltar al contenido</a>
    <header class="border-b border-gray-100" transition:persist>
      <nav class="container flex items-center justify-between py-4" aria-label="Principal">
        <a href="/" class="text-lg font-semibold text-primary-700 no-underline">{SITE_NAME}</a>
        <ul class="flex gap-4 text-sm">
          <li><a href="/">Home</a></li>
          <li><a href="/ruta/faedo-de-cinera">La Ruta</a></li>
          <li><a href="/historia-naturaleza">Historia y Naturaleza</a></li>
          <li><a href="/eventos">Eventos</a></li>
          <li><a href="/guia-visitantes">Guía</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/faq">FAQ</a></li>
        </ul>
      </nav>
    </header>
    <main id="contenido" class="flex-1">
      <slot />
    </main>
    <footer class="border-t border-gray-100" transition:persist>
      <div class="container py-8 text-sm flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <p>&copy; {new Date().getFullYear()} {SITE_NAME} · Proyecto informativo sin ánimo de lucro.</p>
        <nav aria-label="Secundario">
          <ul class="flex gap-4">
            <li><a href="/">Inicio</a></li>
            <li><a href="/ruta/faedo-de-cinera">La Ruta</a></li>
          </ul>
        </nav>
      </div>
    </footer>
  </body>
  
</html>
