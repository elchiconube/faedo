---
import { SITE_TITLE, SITE_DESCRIPTION, SITE_NAME, SITE_LOCALE } from '../consts';
import GoogleAnalytics from './GoogleAnalytics.astro';
import { ViewTransitions } from 'astro:transitions';

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  url = undefined,
  image = undefined,
  type = 'website',
} = Astro.props;
---
<!doctype html>
<html lang={SITE_LOCALE}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#349981" />
    <link rel="canonical" href={(url ?? new URL(Astro.url.pathname, Astro.site)).toString()} />
    <link rel="alternate" hreflang={SITE_LOCALE} href={(url ?? new URL(Astro.url.pathname, Astro.site)).toString()} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    {image && <meta name="twitter:image" content={image} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />
    <link rel="preload" as="style" href="/fonts.css" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="/fonts.css" /></noscript>
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: SITE_NAME,
        url: Astro.site?.toString(),
      })}
    </script>
    <slot name="head" />
    <GoogleAnalytics />
    <ViewTransitions />
    <style is:global>
      @import "../styles/globals.css";
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <a class="skip-link" href="#contenido">Saltar al contenido</a>
    <header class="border-b border-gray-100" transition:persist>
      <nav class="container flex items-center justify-between py-4" aria-label="Principal">
        <a href="/" class="text-lg font-semibold text-primary-700 no-underline">{SITE_NAME}</a>
        <ul class="flex gap-4 text-sm">
          <li><a href="/">Home</a></li>
          <li><a href="/ruta/faedo-de-cinera">La Ruta</a></li>
          <li><a href="/historia-naturaleza">Historia y Naturaleza</a></li>
          <li><a href="/guia-visitantes">Guía</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/faq">FAQ</a></li>
        </ul>
      </nav>
    </header>
    <main id="contenido" class="flex-1">
      <slot />
    </main>
    <footer class="border-t border-gray-100" transition:persist>
      <div class="container py-8 text-sm flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <p>&copy; {new Date().getFullYear()} {SITE_NAME} · Proyecto informativo sin ánimo de lucro.</p>
        <nav aria-label="Secundario">
          <ul class="flex gap-4">
            <li><a href="/">Inicio</a></li>
            <li><a href="/ruta/faedo-de-cinera">La Ruta</a></li>
          </ul>
        </nav>
      </div>
    </footer>
  </body>
  
</html>
